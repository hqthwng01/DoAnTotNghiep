@model IEnumerable<DA_TOTNGHIEP.Models.Products>
@{
    ViewData["Title"] = "ViewAll";
}


<a onclick="showInPopup('@Url.Action("Create","Products",null,Context.Request.Scheme)','Thêm Products')" class="btn btn-primary"><i class='bx bx-plus-circle ml-1'></i><h5 style="display:inline;color:white">Tạo sản phẩm</h5></a>
<div class="card mt-2">
    <div class="card-content">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Sku)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Price)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Stock)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ImageName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ProductType)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Shipment)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Warehouse)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() != 0)
                        {
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sku)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ImageName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductType.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Shipment.Shipment)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Warehouse.Name)
                            </td>
                            <td>
                            <td>
                                <div>
                                    <a onclick="showInPopup('@Url.Action("Edit","Products",new {id=item.Id})','Update')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                        <input type="submit" value="Xoá" class="btn btn-danger" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>