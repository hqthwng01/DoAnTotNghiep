@model IEnumerable<DA_TOTNGHIEP.Models.ProductTypes>

@{
    ViewData["Title"] = "ViewAll";
}
<a onclick="showInPopup('@Url.Action("AddOrEdit","ProductTypes",null,Context.Request.Scheme)','Tạo loại sản phẩm'), document.getElementById('id01').style.display='block'" class="btn btn-primary"><i class='bx bx-plus-circle ml-1'></i><h5 style="display:inline;color:white">Tạo loại sản phẩm</h5></a>
<div class="card mt-2">
    <div class="card-content">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>
                               ID
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Color
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                CreatedAt
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() != 0)
                        {
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Color</td>
                            <td>@item.Status</td>
                            <td>@item.CreatedAt</td>
                            <td>
                                <div>
                                    <a onclick="showInPopup('@Url.Action("AddOrEdit","ProductTypes",new {id=item.Id})','Update')" class="btn btn-info text-white"><i class="fas fa-pencil-alt"></i> Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return jQueryAjaxDelete(this)" class="d-inline">
                                        <input type="submit" value="Xoá" class="btn btn-danger" />
                                    </form>
                                </div>
                            </td>
                        </tr>
                            }

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>